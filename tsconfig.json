{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable",
            "WebWorker"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        /* Path mapping */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@domain/*": [
                "src/domain/*"
            ],
            "@audio/*": [
                "src/audio/*"
            ],
            "@storage/*": [
                "src/storage/*"
            ],
            "@ui/*": [
                "src/ui/*"
            ],
            "@workers/*": [
                "src/workers/*"
            ],
            "@spec/*": [
                "spec/*"
            ]
        }
    },
    "include": [
        "src",
        "spec"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}